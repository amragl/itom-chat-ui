{
  "name": "itom-chat-ui",
  "version": "0.1.0",
  "private": true,
  "description": "ITOM Chat UI - Unified chat interface for ITOM agents with Next.js frontend and FastAPI backend",
  "scripts": {
    "dev": "concurrently -n frontend,backend -c cyan,magenta \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && .venv/bin/uvicorn app.main:app --reload --host 0.0.0.0 --port 8000",
    "lint": "cd frontend && npm run lint",
    "lint:fix": "cd frontend && npm run lint:fix",
    "format": "cd frontend && npm run format",
    "format:check": "cd frontend && npm run format:check",
    "typecheck": "cd frontend && npm run typecheck",
    "build": "cd frontend && npm run build"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
